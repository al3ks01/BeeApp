<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Register an account"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:layout_weight="14"
        />

    <EditText
        android:id="@+id/registerUsername"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_entry"
        android:fontFamily="@font/press_start_2p"
        android:hint="username"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:layout_weight="14"/>

    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_below="@id/registerUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_entry"
        android:fontFamily="@font/press_start_2p"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:layout_weight="14"/>

    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_below="@id/registerEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_entry"
        android:fontFamily="@font/press_start_2p"
        android:hint="password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:layout_weight="14"
        />

    <EditText
        android:id="@+id/registerRepeatPassword"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_below="@id/registerPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_entry"
        android:fontFamily="@font/press_start_2p"
        android:hint="repeat password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:layout_weight="14"

        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerRegisterButton"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_below="@id/registerRepeatPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/press_start_2p"
        android:text="ACCEPT"
        android:textSize="16sp"
        android:layout_weight="14"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerGoLoginButton"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_below="@id/registerRegisterButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/press_start_2p"
        android:text="I already have an account"
        android:textSize="12sp"
        android:layout_weight="14"/>

</LinearLayout>